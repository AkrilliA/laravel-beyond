{
    "git": {
        "commitMessage": "chore: release v${version}"
    },
    "github": {
        "release": true,
        "web": true
    },
    "hooks": {
        "before:init": [
            "php vendor/bin/pest"
        ],
        "after:bump": [
            "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix",
            "composer update --lock"
        ]
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/bumper": {
            "in": "composer.json",
            "out": "composer.json"
        }
    }
}
